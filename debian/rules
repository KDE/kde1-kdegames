#!/usr/bin/make -f
# Made with the aid of debmake, by Christoph Lameter,
# games on the sample debian/rules file for GNU hello by Ian Jackson.

BUILDDIR = ../build_kdegames

build: $(BUILDDIR)/build

$(BUILDDIR)/build:
	dh_testdir
	if test ! -f configure; then \
	  $(MAKE) -f admin/Makefile.common ;\
	fi 
	pwd=`pwd` ;\
	test -d $(BUILDDIR) || mkdir $(BUILDDIR) ;\
	cd $(BUILDDIR) ;\
	CXXFLAGS="-g -O2 -Wall" \
	  $$pwd/configure --with-install-root=`pwd`/debian/tmp \
	  --enable-debug --disable-rpath --bindir=$${kde_bindir} && make
 
	touch $(BUILDDIR)/build

clean: debian-clean
	-rm -rf $(BUILDDIR)

debian-clean:
	dh_testdir
	-rm -f $(BUILDDIR)/build

binary-indep:	build install
	dh_testdir -i
	dh_testroot -i
	dh_installdeb -i
	dh_gencontrol -i
	dh_md5sums -i
	dh_builddeb -i

$(BUILDDIR)/install-stamp: $(BUILDDIR)/build-stamp

binary-arch: install
	dh_testdir
	dh_testroot
	dh_clean -k
	rm -rf $(BUILDDIR)/debian
	cp -ra debian $(BUILDDIR)/debian
	(cd $(BUILDDIR) && $(MAKE) -f debian/rules binary-arch2)

install: $(BUILDDIR)/install-stamp
	make bindir=`pwd`/debian/tmp/usr/games install
	perl -w debian/kderules
	dh_movefiles

binary-arch2: install
	dh_undocumented `cat debian/man-pages`
	dh_installdocs
	dh_installchangelogs
	dh_strip
	dh_compress
	dh_fixperms
	dh_suidregister
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb            

# Below here is fairly generic really

binary:		binary-indep binary-arch

.PHONY: binary binary-arch binary-indep clean
