
SHELL = /bin/sh
top_srcdir = @top_srcdir@
INSTALL_DATA = @INSTALL@ -m 0644
INSTALL_DIR = $(SHELL) $(top_srcdir)/mkinstalldirs

PICS = `find . -type f -name "*.bmp" -print`
prefix = @prefix@
destdir = $(prefix)/share/apps/kpoker/pics

all:

Makefile: Makefile.in
	cd ../.. && CONFIG_FILES=kpoker/bitmaps/Makefile CONFIG_HEADER= config.status 

clean:

install:
	$(INSTALL_DIR) $(destdir)
	@for i in $(PICS); do \
	 echo "$(INSTALL_DATA) $$i $(destdir)/$$i"; \
	 $(INSTALL_DATA) "$$i" $(destdir)/$$i; \
	done

uninstall:
	for i in $(PICS); do \
	 rm -f $(destdir)/$$i; \
	done

