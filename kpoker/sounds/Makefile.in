
top_srcdir = @top_srcdir@
INSTALL_DATA = @INSTALL@ -m 0644
INSTALL_DIR = $(SHELL) $(top_srcdir)/mkinstalldirs

WAVS = `find . -type f -name "*.wav" -print`
prefix = @prefix@
destdir = $(prefix)/share/apps/kpoker/sounds

all:

Makefile: Makefile.in
	cd ../.. && CONFIG_FILES=kpoker/sounds/Makefile CONFIG_HEADER= config.status 

clean:

distclean:
	rm -f Makefile

install:
	$(INSTALL_DIR) $(destdir)
	@for i in $(WAVS); do \
	 echo "$(INSTALL_DATA) $$i $(destdir)/$$i"; \
	 $(INSTALL_DATA) "$$i" $(destdir)/$$i; \
	done

uninstall:
	for i in $(WAVS); do \
	 rm -f $(destdir)/$$i; \
	done

